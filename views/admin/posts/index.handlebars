<h1> ALL POSTS </h1>


<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Image</th>
        <th>Title</th>
        <th>Status</th>
        <th>Allow Comments</th>
        <th>Date</th>
        <th>Categories</th>
        <th>View Post</th>
    </tr>
    </thead>

    <tbody>
    {{#each posts}}
    <tr>
        <td>{{id}}</td>
        <td><img height="50px" src="/uploads/{{file}}" alt=""></td>
        <td>{{title}}</td>
        <td>{{status}}</td>
        <td>{{allowComments}}</td>
        <td>{{generateTime date 'Do MMMM YYYY'}}</td>
        <td>{{category.name}}</td>
        <td><a href="/post/{{slug}}">View</a></td>


